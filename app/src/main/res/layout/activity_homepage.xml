<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.homepage"
    android:background="@color/dark_gray">

    <Button
        android:id="@+id/list"
        android:layout_width="48dp"
        android:layout_height="52dp"
        android:background="@android:color/transparent"
        app:icon="@drawable/list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="430dp"
        android:layout_height="534dp"
        android:layout_marginTop="52dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/darkest_gray"
            android:fontFamily="sans-serif-black"
            android:text="Cuisines"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textSize="30dp" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:contentDescription="alo">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="172dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/image" />

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="172dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/image" />

                <ImageView
                    android:id="@+id/imageView24"
                    android:layout_width="172dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/image" />

                <ImageView
                    android:id="@+id/imageView25"
                    android:layout_width="172dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/image" />

                <ImageView
                    android:id="@+id/imageView26"
                    android:layout_width="172dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/image" />
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/darkest_gray"
            android:fontFamily="sans-serif-black"
            android:text="Highest Ratings"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textSize="30dp" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:contentDescription="alo2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView30"
                    android:layout_width="172dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/image" />

                <ImageView
                    android:id="@+id/imageView31"
                    android:layout_width="172dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/image" />

                <ImageView
                    android:id="@+id/imageView32"
                    android:layout_width="172dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/image" />

                <ImageView
                    android:id="@+id/imageView33"
                    android:layout_width="172dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/image" />

                <ImageView
                    android:id="@+id/imageView34"
                    android:layout_width="172dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/image" />
            </LinearLayout>
        </HorizontalScrollView>


    </LinearLayout>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Open Maps"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapicon"
        app:layout_constraintVertical_bias="0.28" />

    <Button
        android:id="@+id/mapicon"
        android:layout_width="78dp"
        android:layout_height="62dp"
        android:background="@android:color/transparent"
        android:contentDescription="rand"
        app:icon="@drawable/mapicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.168" />

    <Button
        android:id="@+id/filter"
        android:layout_width="107dp"
        android:layout_height="52dp"
        android:background="@android:color/transparent"
        android:contentDescription="rand"
        android:fontFamily="sans-serif-black"
        android:text="Filter"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/darkest_gray"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>